{
  "name": "@eduflow/api-gateway",
  "version": "1.0.0",
  "description": "EduFlow API Gateway Service",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/app.ts",
    "build": "tsc",
    "start": "node dist/app.js",
    "test": "jest",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch"
  },
  "dependencies": {
    "@eduflow/common": "workspace:*",
    "@eduflow/constants": "workspace:*",
    "@eduflow/events": "workspace:*",
    "@eduflow/logger": "workspace:*",
    "@eduflow/middleware": "workspace:*",
    "@eduflow/types": "workspace:*",
    "@fastify/compress": "^8.0.1",
    "@fastify/cors": "^8.4.1",
    "@fastify/helmet": "^11.1.1",
    "@fastify/jwt": "^7.2.4",
    "@fastify/redis": "^7.0.2",
    "@fastify/static": "^6.12.0",
    "@fastify/swagger": "^8.12.1",
    "@fastify/swagger-ui": "^1.10.1",
    "fastify": "^4.24.3",
    "fastify-plugin": "^4.5.1",
    "fp-ts": "^2.16.9",
    "http-proxy": "^1.18.1",
    "ioredis": "^5.5.0",
    "pino": "^8.17.2",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/jest": "29.5.14",
    "@types/node": "18.19.3",
    "@typescript-eslint/eslint-plugin": "5.62.0",
    "@typescript-eslint/parser": "5.62.0",
    "eslint": "8.56.0",
    "jest": "29.7.0",
    "nock": "14.0.1",
    "prettier": "2.8.8",
    "ts-jest": "29.2.6",
    "ts-node-dev": "2.0.0",
    "typescript": "5.3.3"
  }
}
